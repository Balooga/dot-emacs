* End timing .emacs load time
#+BEGIN_SRC emacs-lisp
  (defvar *emacs-load-end* (current-time))

  (defun dot-load-time ()
    (interactive)
    (message ".emacs loaded in %ds" 
             (destructuring-bind (hi lo ms ps) *emacs-load-end*
               (- (+ hi lo)
                  (+ (first *emacs-load-start*) (second *emacs-load-start*))))))
#+END_SRC

